<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BC8DD3"
    tools:context=".SplashScreen">

    <TextView
        android:id="@+id/textView"
        android:layout_width="409dp"
        android:layout_height="95dp"
        android:layout_marginTop="22dp"
        android:text="Altru Management Enterprises Private Limited"
        android:textAlignment="center"
        android:textColor="#190D01"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="391dp"
        android:layout_height="114dp"
        android:layout_marginTop="116dp"
        android:drawableLeft="@drawable/cal1"
        android:text="Assignment given by Anubhav Sir"
        android:textAlignment="center"
        android:textColor="#830D0D"
        android:textSize="35sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.024" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="177dp"
        android:layout_height="145dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="104dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/altru" />

</androidx.constraintlayout.widget.ConstraintLayout>